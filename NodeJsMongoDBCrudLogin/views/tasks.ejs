<!--VISTA OBSOLETA-->
<% include partials/_header %>
<!--MODIFICADO EL ASPECTO PARA QUE SE MUESTRE CENTRADO-->
<div class="container">
<!-- Cambiado el formulario para adaptarse a los atributos de asignatura -->
  <div class="row justify-content-center mt-4">
    <!-- FORM -->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/tasks/add" method="post">
            <div class="form-group">
              <h5>Nueva Tarea</h5>
              <br>
              <label for="nombre">Nombre:</label>
              <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Nombre" required>
            </div>
            <div class="form-group">
              <label for="planEstudios">Plan de Estudios:</label>
              <input class="form-control" name="planEstudios" id="planEstudios" placeholder="Plan de Estudios" required></input>
            </div>
            <div class="form-group">
              <label for="cuatrimestre">Cuatrimestre:</label>
              <input class="form-control" type="text" name="cuatrimestre" id="cuatrimestre" placeholder="Cuatrimestre" required>
            </div>
            <div class="form-group">
              <label for="curso">Curso:</label>
              <input class="form-control" type="text" name="curso" id="curso" placeholder="Curso" required>
            </div>
            <button class="btn btn-primary" type="submit">Agregar</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!--Modificada la lista de tareas para no tener software directamente dentro-->
    <!-- LIST -->
    <div class="row justify-content-left mt-4">
      <div class="col-md-12">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>NÂ°</th>
              <th>Nombre</th>
              <th>Plan de Estudios</th>
              <th>Cuatrimestre</th>
              <th>Curso</th>
              <th>Operaciones</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < tasks.length; i++) { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><strong><%= tasks[i].nombre %></strong></td>
                <td><%= tasks[i].planEstudios %></td>
                <td><%= tasks[i].cuatrimestre %></td>
                <td><%= tasks[i].curso %></td>
                <td>
                  <a href="/tasks/delete/<%= tasks[i]._id %>" class="btn btn-danger">Eliminar</a>
                  <a href="/tasks/edit/<%= tasks[i]._id %>" class="btn btn-info">Editar</a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>

<% include partials/_footer %>
